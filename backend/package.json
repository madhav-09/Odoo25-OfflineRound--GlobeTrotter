{
  "name": "globetrotter-backend",
  "version": "1.0.0",
  "description": "GlobeTrotter Backend API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "prod": "NODE_ENV=production node server.js",
    "db:migrate": "node migrations/run-migrations.js",
    "db:reset": "node migrations/run-migrations.js --force",
    "db:test": "node -e \"require('./config/database').authenticate().then(() => console.log('✅ DB Connected')).catch(e => console.error('❌ DB Error:', e.message))\"",
    "db:test-persistence": "node scripts/test-data-persistence.js",
    "db:recover": "node scripts/recover-data.js",
    "db:status": "node migrations/check-migration-status.js",
    "db:reset-all": "node migrations/reset-migrations.js",
    "test-project": "node test-project.js",
    "verify-features": "node feature-verification.js",
    "test-budget": "node test-budget-system.js",
    "validate-env": "node -e \"require('./config/validate-env')()\""
  },
  "dependencies": {
    "amazon-cognito-identity-js": "^6.3.6",
    "aws-jwt-verify": "^5.1.0",
    "aws-sdk": "^2.1467.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "pg": "^8.11.3",
    "sequelize": "^6.33.0",
    "sqlite3": "^5.1.7",
    "uuid": "^11.1.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
